<ScrollView
	android:id="@+id/dialog_settings"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	    <LinearLayout
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="lower H" />
	
	        <SeekBar
	            android:id="@+id/seekBar_lower_h"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="179"
	            android:progress="170"/>
	        
	        <TextView
	            android:id="@+id/lower_h_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="170" />
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="lower S" />
	
	        <SeekBar
	            android:id="@+id/seekBar_lower_s"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="255"
	            android:progress="160"/>
	        
	        <TextView
	            android:id="@+id/lower_s_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="160" />
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="lower V" />
	
	        <SeekBar
	            android:id="@+id/seekBar_lower_v"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="255"
	            android:progress="60"/>
	        
	        <TextView
	            android:id="@+id/lower_v_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="60" />
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="higher H"/>
	
	        <SeekBar
	            android:id="@+id/seekBar_higher_h"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="179"
	            android:progress="180"/>
	        
	        <TextView
	            android:id="@+id/higher_h_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="180" />
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="higher S" />
	
	        <SeekBar
	            android:id="@+id/seekBar_higher_s"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="255"
	            android:progress="255"/>
	        
	        <TextView
	            android:id="@+id/higher_s_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="255" />
	        
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="higher V" />
	
	        <SeekBar
	            android:id="@+id/seekBar_higher_v"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:max ="255"
	            android:progress="255"/>
	        
	        <TextView
	            android:id="@+id/higher_v_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="255" />
	
	    </LinearLayout>
</ScrollView>